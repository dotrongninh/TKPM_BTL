@page
@model BTL_Ninh_Kho.Pages.Warehouse.CreateModel
@{
    ViewData["Title"] = "Thêm Mới Kho Hàng";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">@ViewData["Title"]</h6>
            <a href="javascript:history.back()" class="btn btn-sm btn-secondary">
                <i class="fas fa-arrow-left"></i> Quay lại
            </a>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Input.Name" class="form-label">Tên kho hàng <span class="text-danger">*</span></label>
                            <input asp-for="Input.Name" class="form-control" placeholder="Nhập tên kho hàng"/>
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Input.Address" class="form-label">Địa chỉ <span class="text-danger">*</span></label>
                            <input asp-for="Input.Address" class="form-control" placeholder="Nhập địa chỉ kho"/>
                            <span asp-validation-for="Input.Address" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Input.ManagerId" class="form-label">Người quản lý</label>
                            <select asp-for="Input.ManagerId" class="form-select" asp-items="Model.Managers">
                                <option value="">-- Chọn người quản lý --</option>
                            </select>
                            <span asp-validation-for="Input.ManagerId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Input.Capacity" class="form-label">Sức chứa tối đa <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <input asp-for="Input.Capacity" class="form-control" type="number" min="1" placeholder="Nhập sức chứa"/>
                                <span class="input-group-text">đơn vị</span>
                            </div>
                            <span asp-validation-for="Input.Capacity" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Input.Area" class="form-label">Diện tích kho <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <input asp-for="Input.Area" class="form-control" type="number" step="0.01" min="0.1" placeholder="Nhập diện tích"/>
                                <span class="input-group-text">m²</span>
                            </div>
                            <span asp-validation-for="Input.Area" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Lưu kho hàng
                    </button>
                    <a asp-page="./Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Hủy
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 