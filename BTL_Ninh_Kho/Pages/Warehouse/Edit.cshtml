@page
@model BTL_Ninh_Kho.Pages.Warehouse.EditModel
@{
    ViewData["Title"] = "Sửa thông tin kho";
}

<div class="container-fluid">
    <h4 class="mb-3">@ViewData["Title"]</h4>

    <form method="post">
        <input type="hidden" asp-for="Input.ID" />
        
        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="Input.Name" class="control-label">Tên kho</label>
                    <input asp-for="Input.Name" class="form-control" />
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Input.Address" class="control-label">Địa chỉ</label>
                    <input asp-for="Input.Address" class="form-control" />
                    <span asp-validation-for="Input.Address" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Input.Capacity" class="control-label">Sức chứa</label>
                    <input asp-for="Input.Capacity" class="form-control" type="number" />
                    <span asp-validation-for="Input.Capacity" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Input.Area" class="control-label">Diện tích (m²)</label>
                    <input asp-for="Input.Area" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="Input.Area" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Input.ManagerId" class="control-label">Quản lý</label>
                    <select asp-for="Input.ManagerId" asp-items="Model.Managers" class="form-select">
                        <option value="">-----Chọn quản lý-----</option>
                    </select>
                    <span asp-validation-for="Input.ManagerId" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="Input.IsActive" class="form-check-input" type="checkbox" />
                    <label asp-for="Input.IsActive" class="form-check-label">Đang hoạt động</label>
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Lưu</button>
                    <a asp-page="./Index" class="btn btn-secondary">Quay lại</a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 